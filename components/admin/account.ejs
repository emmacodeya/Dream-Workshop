<h1 class="fs-2 mb-7 fw-bold">會員管理</h1>
<form class="form-inline w-100 d-flex align-items-center">
  <input class="form-control me-2 flex-grow-1 admin-search" type="search" placeholder="搜尋 ID / 會員姓名">
  
  <button class="btn btn-primary-600 fw-bold rounded me-3" type="submit">搜尋</button>
  
  <div class="admin-dropdown dropdown me-3">
    <button class="btn btn-secondary dropdown-toggle rounded bg-gray-1000" type="button" id="dropdownButtonVerify" data-bs-toggle="dropdown">
      審核狀態
    </button>
    <ul class="dropdown-menu rounded bg-gray-1000">
      <li><a class="dropdown-item" href="#">全部</a></li>
      <li><a class="dropdown-item" href="#">已審核</a></li>
      <li><a class="dropdown-item" href="#">未審核</a></li>
    </ul>
  </div>
  
  <div class="admin-dropdown dropdown">
    <button class="btn btn-secondary dropdown-toggle rounded bg-gray-1000" type="button" id="dropdownButtonStatus" data-bs-toggle="dropdown">
      啟用狀態
    </button>
    <ul class="dropdown-menu dropdown-menu_short rounded bg-gray-1000">
      <li><a class="dropdown-item" href="#">全部</a></li>
      <li><a class="dropdown-item" href="#">啟用</a></li>
      <li><a class="dropdown-item" href="#">未啟用</a></li>
    </ul>
  </div>
</form>

<div class="admin-account">
  <table class="table mt-4">
    <thead class="table-light">
      <tr>
        <th width="20">ID</th>
        <th width="90">姓名</th>
        <th width="90">審核狀態</th>
        <th width="90">帳戶狀態</th>
        <th width="30" class="text-center">會員資訊</th>
        <th width="30" class="text-center">會員審核</th>
        <th width="30" class="text-center">刪除</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>1</td>
        <td>John Smith</td>
        <td>
          <p class="fw-bold text-primary-600">
            已審核
          </p>
        </td>
        <td>
          <p class="fw-bold text-primary-600">
            啟用
          </p>
        </td>
        </td>
        <td class="text-center">
          <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#accountViewModal">
            查看
          </button>
        </td>
        <td class="text-center">
          <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#accountVerifyModal">
            審核
          </button>
        </td>
        <td class="text-center">
          <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delAccountModal">
            刪除
          </button>
        </td>
      </tr>
      <tr>
        <td>2</td>
        <td>Christopher Jones</td>
        <td>
          <p class="fw-bold text-primary-600">
            已審核
          </p>
        </td>
        <td>
          <p class="fw-bold text-danger">
            未啟用
          </p>
        </td>
        </td>
        <td class="text-center">
          <button  class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#accountViewModal">
            查看
          </button>
        </td>
        <td class="text-center">
          <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="modal" data-bs-target="#accountVerifyModal">
            審核
          </button>
        </td>
        <td class="text-center">
          <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delAccountModal">
            刪除
          </button>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<!-- 資訊 -->
<div class="modal fade" id="accountViewModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary-600">
        <h5 class="fs-3 modal-title fw-bold">會員資訊</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body admin-modal-body">
        <h4 class="fs-4 fw-bold mb-3">基本資訊</h4>
        <p >會員ID：1</p>
        <p>姓名：John Smith</p>
        <p>性別：男</p>
        <p>身分：投資者</p>
        <p>連絡電話：0912345678</p>
        <p>電子信箱：happy5678@gmail.com</p>
        <hr>
        <h4 class="fs-4 fw-bold mb-3">查看權限</h4>
        <h5 class="fs-5 fw-bold">創業項目</h5>
        <table class="table mt-4 mb-6">
          <thead class="table-light">
            <tr>
              <th width="100">項目</th>
              <th width="120">權限</th>
            </tr>
          </thead>
          <tbody id="startup-tbody"></tbody>
        </table>

        <h5 class="fs-5 fw-bold">投資人</h5>
        <table class="table mt-4">
          <thead class="table-light">
            <tr>
              <th width="100">投資人</th>
              <th width="120">權限</th>
            </tr>
          </thead>
          <tbody id="investor-tbody"></tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded" data-bs-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary-600 rounded">確認</button>
      </div>
    </div>
  </div>
</div>
<!-- 審核 -->
<div class="modal fade" id="accountVerifyModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-primary-600">
        <h5 class="fs-3 modal-title fw-bold">會員審核</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body admin-modal-body">
        <h4 class="fs-5 mb-3">會員身分證正面</h4>
        <img class="mb-8" src="../../assets/images/身分證正面樣本.jpg" alt="身分證正面">
        <h4 class="fs-5 mb-3">會員身分證反面</h4>
        <img class="mb-8" src="../../assets/images/身分證背面樣本.jpg" alt="身分證反面">
        <h4 class="fs-5 mb-3">第二證件正面</h4>
        <img src="../../assets/images/第二張證件樣本.jpg" alt="第二證件">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary rounded">未通過</button>
        <button type="button" class="btn btn-primary-600 rounded">通過</button>
      </div>
    </div>
  </div>
</div>
<!-- 刪除 -->
<div id="delAccountModal"
ref="delCommentModal"
class="modal fade"
tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border-0">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title fw-bold">
          <span>刪除帳戶</span>
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <div class="modal-body">
        是否刪除ID為
        <strong class="text-danger">1</strong>
        之帳戶(刪除後將無法恢復)。
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary rounded" data-bs-dismiss="modal">
          取消
        </button>
        <button type="button" class="btn btn-danger rounded">確認刪除</button>
      </div>
    </div>
  </div>
</div>